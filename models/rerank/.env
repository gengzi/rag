# 基础配置
PORT=8020                  # 宿主机端口
GPU_COUNT=1                # 使用的GPU数量（根据实际情况调整）
TENSOR_PARALLEL_SIZE=1     # 模型并行数（建议与GPU_COUNT一致）

# 性能配置
DTYPE=float16              # 计算精度（可选：float16/bfloat16/float32，推荐float16）
MAX_BATCHED_TOKENS=8192    # 最大批处理token数（根据GPU显存调整）
MAX_NUM_SEQS=256           # 最大批处理序列数

# 模型缓存目录（可选，用于持久化模型文件）
MODEL_CACHE_DIR= ~/.cache/huggingface/hub  # 宿主机模型缓存路径